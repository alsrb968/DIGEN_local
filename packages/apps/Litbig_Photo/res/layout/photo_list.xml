    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="372"
        android:orientation="vertical" >
        <LinearLayout android:id="@+id/list_upstep"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="71"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="70"
                android:orientation="horizontal"
                android:background="@drawable/listview_selector" >
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="19" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="58"
                    android:orientation="vertical" >
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="12" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="46"
                        android:src="@drawable/ic_upstep_click" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="12" />
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="941"
                    android:orientation="vertical" >
                    <TextView 
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="43"
                        android:gravity="left|center_vertical"
                        android:singleLine="true"
                        android:text="@string/list_subcategory"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="18px"
                        android:ellipsize="end" />
                    <TextView android:id="@+id/sub_category"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="27"
                        android:gravity="top"
                        android:singleLine="true"
                        android:textColor="#CCCCCC"
                        android:ellipsize="end" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#1AFFFFFF" />
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="301" >
            <ListView android:id="@+id/item_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="@drawable/listview_selector"
                android:divider="#1AFFFFFF"
                android:dividerHeight="1px" />
            <GridView android:id="@+id/item_grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="4"
                android:listSelector="@android:color/transparent" />
        </FrameLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="62" />
</LinearLayout>