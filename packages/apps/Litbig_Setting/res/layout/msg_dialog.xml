<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="534px"
    android:layout_height="249px"
    android:layout_marginLeft="245px"
    android:layout_marginTop="175px"
    android:orientation="vertical"
    android:paddingTop="6px"
    android:paddingLeft="1px"
    android:paddingRight="7px"
    android:paddingBottom="10px"
    android:background="@drawable/board_popup" >
    
    <TextView 
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="22dp"
        android:textStyle="bold"
        android:text="title"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:text="content" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="55px"
        android:orientation="horizontal">
        
        <Button 
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/btn_popup"
            android:textColor="#ffffff"
            android:layout_marginRight="1px"
            android:textSize="18px"
            android:text="@string/ok"/>
        
        <Button 
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/btn_popup"
            android:textColor="#ffffff"
            android:layout_marginLeft="1px"
            android:textSize="18px"
            android:text="@string/cancel"/>
        
    </LinearLayout>
    
</LinearLayout>
