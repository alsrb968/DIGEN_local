<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="534px"
    android:layout_height="306px"
    android:layout_marginLeft="245px"
    android:layout_marginTop="147px"
    android:background="@drawable/board_popup"
    android:paddingBottom="10px"
    android:paddingLeft="1px"
    android:paddingRight="7px"
    android:paddingTop="6px" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="11px"
        android:paddingLeft="27px"
        android:paddingRight="27px" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="55px"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="등록된 디바이스"
            android:textColor="#ffffff"
            android:textSize="22dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80px"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="이름 변경"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="48px"
            android:layout_marginTop="126px"
            android:background="@drawable/edit_textview_style_blank"
            android:gravity="center_vertical"
            android:hint="변경 할 이름을 입력하세요."
            android:inputType="text"
			android:imeOptions="actionDone"
            android:maxLength="64"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="18dp" >
            <requestFocus />
        </EditText>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/name"
            android:background="#ffffff" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_name_change"
            android:layout_width="match_parent"
            android:layout_height="55px"
            android:layout_weight="1"
            android:background="@drawable/btn_popup"
            android:gravity="center"
            android:text="변경"
            android:textColor="#ffffff"
            android:layout_marginRight="1px"
            android:textSize="18px" />

        <Button
            android:id="@+id/btn_disconnect"
            android:layout_width="match_parent"
            android:layout_height="55px"
            android:layout_weight="1"
            android:background="@drawable/btn_popup"
            android:gravity="center"
            android:text="페어링 해제"
            android:textColor="#ffffff"
            android:layout_marginRight="1px"
            android:layout_marginLeft="1px"
            android:textSize="18px" />
        
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="55px"
            android:layout_weight="1"
            android:layout_marginLeft="1px"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_popup"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="#ffffff"
            android:textSize="18px" />
    </LinearLayout>

    
</RelativeLayout>
