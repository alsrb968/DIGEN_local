<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_music" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="69" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="891"
        android:orientation="vertical" >
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="38" />
        
        <!-- music info start-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="323"
            android:orientation="horizontal" >
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="539"
                android:orientation="vertical" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="52"
                    android:orientation="horizontal" >
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="200"
                        android:gravity="left|center_vertical"
                        android:orientation="horizontal" >
                        <TextView android:id="@+id/current_index"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff" />
                        <TextView android:id="@+id/total_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#cccccc" />
                    </LinearLayout>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="233" />
                    <ImageButton android:id="@+id/scan_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="52"
                        android:src="@drawable/btn_scan_off_click"
                        android:background="@android:color/transparent" />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                    <ImageButton android:id="@+id/list_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="52"
                        android:src="@drawable/btn_mlist_click"
                        android:background="@android:color/transparent" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="35" />
                <TextView android:id="@+id/title_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="74"
                    android:gravity="left|top"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:textColor="#ffffff" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="103" />
                <TextView android:id="@+id/artist_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="31"
                    android:gravity="left|top"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:textColor="#ffffff" />
                <TextView android:id="@+id/album_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="28"
                    android:gravity="left|top"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#cccccc" />
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="21" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="314"
                android:orientation="vertical" >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="9" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="314"
                    android:orientation="vertical"
                    android:background="@drawable/cover_frame" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="309"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="310"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView android:id="@+id/album_image"
                            android:layout_width="290px"
                            android:layout_height="290px" />
                    </LinearLayout>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7" />
        </LinearLayout>
        <!-- music info end-->
        
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="32" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal" >
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="11" />
            <TextView android:id="@+id/current_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="432"
                android:gravity="left|top"
                android:textColor="#ffffff" />
            <TextView android:id="@+id/total_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="432"
                android:gravity="right|top"
                android:textColor="#cccccc" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="16" />
        </LinearLayout>
        
        <!-- control bar start-->
        <SeekBar android:id="@+id/time_progress"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="27"
            android:thumb="@drawable/btn_mplay_location_marker_click"
            android:progressDrawable="@drawable/seekbar"
            android:paddingLeft="8px"
            android:paddingRight="8px" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="62"
            android:orientation="horizontal" >
            <ImageButton android:id="@+id/repeat_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="52"
                android:src="@drawable/btn_repeat_all_click"
                android:background="@android:color/transparent" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="259" />
            <ImageButton android:id="@+id/previous_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="52"
                android:src="@drawable/btn_prev_click"
                android:background="@android:color/transparent" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="49" />
            <ImageButton android:id="@+id/play_pause_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="62"
                android:background="@android:color/transparent" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="48" />
            <ImageButton android:id="@+id/next_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="52"
                android:src="@drawable/btn_next_click"
                android:background="@android:color/transparent" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="265" />
            <ImageButton android:id="@+id/shuffle_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="52"
                android:src="@drawable/btn_shuffle_off_click"
                android:background="@android:color/transparent" />
        </LinearLayout>
        <!-- control bar end-->
        
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="83" />
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="64" />
</LinearLayout>
</FrameLayout>
